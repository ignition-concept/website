{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "unicorn"
  ],
  "extends": [
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "env": {
        "browser": true,
        "es2024": true
      },
      "files": [
        "./resources/**/*.tsx",
        "./resources/**/*.js",
        "./resources/**/*.jsx",
        "./resources/**/*.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended"
      ],
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    },
    {
      "env": {
        "es2024": true,
        "node": true
      },
      "files": [
        "**/*.js",
        "**/*.ts",
        "**/*.jsx",
        "**/*.tsx"
      ],
      "excludedFiles": [
        "./resources/**/*.tsx",
        "./resources/**/*.js",
        "./resources/**/*.jsx",
        "./resources/**/*.ts"
      ],
      "extends": [
        "@adonisjs/eslint-config/app"
      ]
    }
  ]
}
