{
  "env": {
    "es2023": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "parser": "@typescript-eslint/parser",
  "root": true,
  "overrides": [
    {
      "files": [
        "**/*.{ts,tsx,js,jsx}"
      ],
      "excludedFiles": [
        "node_modules",
        "resources/**/*.{ts,tsx,js,jsx}",
        "public",
        "build",
        "dist",
        "tmp"
      ],
      "extends": "@adonisjs/eslint-config/app",
      "parserOptions": {
        "tsconfigRootDir": ".",
        "project": [
          "tsconfig.json"
        ]
      }
    },
    {
      "files": [
        "./resources/**/*.{ts,tsx,js,jsx}"
      ],
      "parserOptions": {
        "tsconfigRootDir": ".",
        "project": [
          "tsconfig.web.json"
        ]
      }
    }
  ]
}
